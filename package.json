{
  "name": "muslim-api",
  "version": "2.0.0",
  "description": "REST API untuk Al-Quran (Kemenag), Doa, Dzikir, dan Hadits - Cloudflare Workers",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create muslim-api-db",
    "db:migrate:local": "wrangler d1 migrations apply muslim-api-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply muslim-api-db --remote",
    "db:export": "bash scripts/export-db.sh",
    "db:seed:local": "wrangler d1 execute muslim-api-db --local --file=migrations/0002_seed_data.sql",
    "db:seed:prod": "wrangler d1 execute muslim-api-db --remote --file=migrations/0002_seed_data.sql",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.6.0",
    "wrangler": "^3.91.0"
  }
}
